<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".cadastro.MainActivity">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="157dp"
            android:layout_height="132dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.043" />

        <TextView

            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Coin"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.242" />

        <TextView

            android:id="@+id/info"
            android:layout_width="322dp"
            android:layout_height="27dp"
            android:layout_marginTop="32dp"
            android:hint="Sua carteira virtual segura"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"

            app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nome"
            app:layout_constraintVertical_bias="0.081" />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/button_Login_Login"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:background="#666666"
            android:text="Login"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.793" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_Login_Cadastrar"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:background="#666666"
            android:text="Cadastrar"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.854" />

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="250dp"
            android:layout_height="92dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.622">

            <EditText
                android:id="@+id/editText_Login_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editText_Login_Senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:hint="Senha"
                android:inputType="textPassword" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="246dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/button_Login_Login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
            app:layout_constraintVertical_bias="0.2">

            <TextView
                android:id="@+id/textView_Login_RecuperarSenha"
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:freezesText="true"
                android:text="  Esqueceu a senha?"
                android:textAlignment="viewStart"
                android:textColor="#0000ff" />

        </LinearLayout>










    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>