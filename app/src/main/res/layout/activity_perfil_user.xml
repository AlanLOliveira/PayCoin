<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:background="@color/cinza_laro"
    tools:context=".cadastro.CadastroUser">

    <ImageView
        android:id="@+id/imageView_perfil_Logo"
        android:layout_width="wrap_content"
        android:layout_height="137dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView_perfil_Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay Coin"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_perfil_inserirNome"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="4dp"
        android:autofillHints="nome"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="6dp"
        android:ems="5"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHighlight="@color/purple_500"
        android:textColorHint="@color/cinza_escuro"
        android:textColorLink="@color/purple_700"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editText_perfil_inserirEmail"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="4dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="6dp"
        android:ems="5"
        android:hint="Email"
        android:inputType="textWebEmailAddress"
        android:textColor="@color/black"
        android:textColorHighlight="@color/purple_500"
        android:textColorHint="@color/cinza_escuro"
        android:textColorLink="@color/purple_700"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editText_perfil_inserirSenha"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="4dp"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="6dp"
        android:ems="5"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHighlight="@color/purple_500"
        android:textColorHint="@color/cinza_escuro"
        android:textColorLink="@color/purple_700"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/editText_perfil_inserirDadosBancarios"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="4dp"
        android:drawableLeft="@drawable/ic_baseline_account_balance_24"
        android:drawablePadding="6dp"
        android:ems="5"
        android:hint="Dados bancarios"
        android:inputType="none"
        android:textColor="@color/black"
        android:textColorHighlight="@color/purple_500"
        android:textColorHint="@color/cinza_escuro"
        android:textColorLink="@color/purple_700"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editText_perfil_inserirCPF"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="4dp"
        android:drawableLeft="@drawable/ic_baseline_account_balance_24"
        android:drawablePadding="6dp"
        android:ems="5"
        android:hint="CPF"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHighlight="@color/purple_500"
        android:textColorHint="@color/cinza_escuro"
        android:textColorLink="@color/purple_700"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editText_perfil_inserirValorInicial"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="4dp"
        android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
        android:drawablePadding="6dp"
        android:ems="5"
        android:hint="Valor Inicial"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHighlight="@color/purple_500"
        android:textColorHint="@color/cinza_escuro"
        android:textColorLink="@color/purple_700"
        android:textSize="12sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="346dp"
        android:layout_height="52dp">

        <Button
            android:id="@+id/button_perfil_Sair"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:backgroundTint="@color/cinza_escuro"
            android:minHeight="48dp"
            android:text="Sair"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_perfil_Editar"
            app:layout_constraintStart_toEndOf="@+id/button_perfil_Salvar"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_perfil_Salvar"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:backgroundTint="@color/cinza_escuro"
            android:minHeight="48dp"
            android:text="Salvar"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/button_perfil_Editar"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:backgroundTint="@color/cinza_escuro"
            android:minHeight="48dp"
            android:text="Editar"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.936"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>



