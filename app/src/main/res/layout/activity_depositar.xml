<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza_laro"
    tools:context=".deposito.Depositar">

    <ImageButton
        android:id="@+id/imageButton_Depositar_VoltarInicial"
        android:layout_width="19dp"
        android:layout_height="24dp"
        android:layout_marginBottom="40dp"
        android:background="#DCDCDC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView

        android:id="@+id/textView_CodBarras_Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay Coin"
        android:textAlignment="center"
        android:textColor="#171616"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo5"
        app:layout_constraintVertical_bias="0.176" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolha as opções para depósitos"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.456" />

    <ImageView
        android:id="@+id/logo5"
        android:layout_width="411dp"
        android:layout_height="123dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/editText_Depositar_DigitarRecebedor"
        android:layout_width="312dp"
        android:layout_height="41dp"

        android:hint="Selecione o Recebedor"
        android:paddingLeft="6dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="323dp"
        android:layout_height="36dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.894">

        <Button
            android:id="@+id/button_Depositar_ConfirmarDados"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/cinza_escuro"
            android:text="ok"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editText_CodBarrasDigitavel_Senha"
            android:layout_width="167dp"
            android:layout_height="36dp"
            android:drawableStart="@drawable/ic_lock"
            android:hint="Digite sua senha"
            android:inputType="textPassword"
            android:textSize="15dp" />

        <Button
            android:id="@+id/button_Deposito_ConcluirTransacao"
            android:layout_width="93dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/cinza_escuro"
            android:text="Concluir"
            android:textColor="@color/white"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="129dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toEndOf="@+id/linearLayout5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.964">

        <TextView
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="Moeda Inicial"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/spinner_Deposito_MoedaIncial"
            android:layout_width="120dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="Moeda Final"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/spinner_Deposito_MoedaFinal"
            android:layout_width="120dp"
            android:layout_height="25dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="254dp"
        android:layout_height="54dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Depositar_DigitarRecebedor"
        app:layout_constraintVertical_bias="0.279">

        <EditText
            android:id="@+id/editText_Depositar_DigitarValor"
            android:layout_width="109dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:hint="Digite o valor"
            android:textSize="14dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton_Depositar_ConverterMoeda"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            app:srcCompat="@drawable/conversaoooo" />

        <TextView
            android:id="@+id/textView_Depositar_ValolFinal"
            android:layout_width="109dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:hint="Valor Final"
            android:inputType="numberDecimal"
            android:maxLength="11"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="129dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967">

        <TextView
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="Banco Origem"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Spinner

            android:id="@+id/spinner_Deposito_BancoOrigem"
            android:layout_width="120dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="Tipo depósito"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/spinner_Depositar_TipoDeposito"
            android:layout_width="120dp"
            android:layout_height="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="315dp"
        android:layout_height="189dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_Depositar_VoltarInicial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_CodBarras_Titulo"
        app:layout_constraintVertical_bias="0.832">

        <TextView
            android:id="@+id/textView_Depositar_Recebedor"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView_Depositar_Banco"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView_Depositar_AgenciaConta"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView_Depositar_DataTransacao"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView_Depositar_TipoDeposito"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editText_Depositar_ConfirmarValor"
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:hint="Confirme o valor a ser pago"
            android:paddingTop="15dp"
            android:text="R$ "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>