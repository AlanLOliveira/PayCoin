<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".deposito.Depositar">

    <ImageButton
        android:id="@+id/imageButton_Deposito_VoltarInicial"
        android:layout_width="19dp"
        android:layout_height="24dp"
        android:layout_marginBottom="40dp"
        android:background="#DCDCDC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Deposito_ConcluirTransação"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView

        android:id="@+id/textView_CodBarras_Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay Coin"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo5"
        app:layout_constraintVertical_bias="0.198" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Escolha as opções para depósitos"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo5"
        app:layout_constraintVertical_bias="0.109" />

    <ImageView
        android:id="@+id/logo5"
        android:layout_width="wrap_content"
        android:layout_height="137dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <Spinner

            android:id="@+id/spinner_Deposito_BancoInicial"
            android:layout_width="120dp"
            android:layout_height="25dp" />

        <Spinner
            android:id="@+id/spinner_Deposito_TipoDeposito"
            android:layout_width="120dp"
            android:layout_height="25dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="256dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="Banco Origem"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="Tipo depósito"
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="256dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="Moeda Inicial"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="Moeda Final"
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="371dp"
        android:layout_height="64dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.03">


        <TextView
            android:id="@+id/textView_Deposito_BuscarRecebedor"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:text="Selecione o Recebedor"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.13">

        <Spinner
            android:id="@+id/spinner_Deposito_MoedaIncial"
            android:layout_width="120dp"
            android:layout_height="25dp" />
        <Spinner
            android:id="@+id/spinner_Deposito_MoedaFinal"
            android:layout_width="120dp"
            android:layout_height="25dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="256dp"
        android:layout_height="63dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.106">

        <EditText
            android:id="@+id/digitValor"
            android:layout_width="109dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:hint="Digite o valor"
            android:textSize="14dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton_Deposito_ConverterMoeda"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            app:srcCompat="@drawable/conversaoooo" />

        <TextView
            android:id="@+id/textView_Deposito_ValolFinal"
            android:layout_width="109dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="Valor Final"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/button_Deposito_ConcluirTransação"
        android:layout_width="145dp"
        android:layout_height="41dp"
        android:backgroundTint="@color/cinza_escuro"
        android:text="Concluir"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
        app:layout_constraintVertical_bias="0.111" />




</androidx.constraintlayout.widget.ConstraintLayout>