<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:paddingTop="10dp"
    tools:context=".pagar.CodBarrasDigit">

    <ImageView
        android:id="@+id/imageView_CodBarraDigit_Logo"
        android:layout_width="wrap_content"
        android:layout_height="137dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />


    <ImageButton
        android:id="@+id/imageButton_CodBarraDigit_MetodoEscolha"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_marginBottom="40dp"
        android:background="#DCDCDC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_CodBarraDigit_Confirmar"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="303dp"
        android:layout_height="283dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_CodBarraDigit_DigiteCodBarra"
        app:layout_constraintVertical_bias="0.069">

        <EditText
            android:id="@+id/editText_CodBarraDigit_CampoA"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:ellipsize="end"
            android:hint="Digíte aqui seu código de barras"
            android:maxLength="12"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_CodBarraDigit_CampoB"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:ellipsize="end"
            android:hint="Digíte aqui seu código de barras"
            android:maxLength="12"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_CodBarraDigit_CampoC"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:ellipsize="end"
            android:hint="Digíte aqui seu código de barras"
            android:maxLength="12"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_CodBarraDigit_CampoD"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:ellipsize="end"
            android:hint="Digíte aqui seu código de barras"
            android:maxLength="12"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_CodBarraDigit_ValorPagamento"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:paddingLeft="6dp"
            android:text="Valor para pagamento:"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView_CodBarraDigit_Vencimento"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:paddingLeft="6dp"
            android:text="Data Vencimento:"
            android:textColor="@color/black"
            android:textSize="15dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView_CodBarraDigit_DigiteCodBarra"
        android:layout_width="401dp"
        android:layout_height="29dp"
        android:layout_marginTop="36dp"
        android:text="Digite o código de barras"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_CodBarras_Titulo"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_CodBarraDigit_Confirmar"
        android:layout_width="219dp"
        android:layout_height="37dp"
        android:backgroundTint="@color/black"
        android:text="Confirmar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/textView_CodBarras_Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay Coin"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_CodBarraDigit_Logo"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>