<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:paddingTop="5dp"
    tools:context=".pagar.CodBarrasDigit">


    <ImageButton
        android:id="@+id/imageButton_CodBarrasDigitavel_MetodoPagamento"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_marginBottom="40dp"
        android:background="#DCDCDC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <ImageView
        android:id="@+id/imageView_CodBarraDigit_Logo"
        android:layout_width="wrap_content"
        android:layout_height="137dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="332dp"
        android:layout_height="329dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_CodBarraDigit_DigiteCodBarra"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/editText_CodBarraDigit_CampoA"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:ellipsize="end"
            android:hint="Digíte aqui seu código de barras"
            android:maxLength="12"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_CodBarraDigit_CampoB"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:ellipsize="end"
            android:hint="Digíte aqui seu código de barras"
            android:maxLength="12"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_CodBarraDigit_CampoC"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:ellipsize="end"
            android:hint="Digíte aqui seu código de barras"
            android:maxLength="12"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_CodBarraDigit_CampoD"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:ellipsize="end"
            android:hint="Digíte aqui seu código de barras"
            android:maxLength="12"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_CodBarraDigitar_DadosTransacao"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:paddingLeft="6dp"
            android:text="Confira os dados abaixo"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView_CodBarraDigitar_Favorecido"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:paddingLeft="6dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView_CodBarraDigitar_Vencimento"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:paddingLeft="6dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView_CodBarraDigitar_ValorPagamento"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:paddingLeft="6dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView_CodBarraDigitar_DataPagamento"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:paddingLeft="6dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/textView_CodBarraDigitar_ConfirmeValor"
            android:layout_width="300dp"
            android:layout_height="36dp"
            android:hint="Confirme o Valor"
            android:paddingLeft="6dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView_CodBarraDigit_DigiteCodBarra"
        android:layout_width="401dp"
        android:layout_height="25dp"
        android:text="Digite o código de barras"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_CodBarras_Titulo"
        app:layout_constraintVertical_bias="0.019" />

    <TextView
        android:id="@+id/textView_CodBarras_Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay Coin"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_CodBarraDigit_Logo"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_CodBarrasDigitavel_MetodoPagamento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/button_CodBarraDigit_ConfirmarCodBarras"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cinza_escuro"
            android:text="ok"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/editText_CodBarrasDigitavel_Senha"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_lock"
            android:hint="Digite sua senha"
            android:inputType="textPassword"
            android:textSize="15dp" />

        <Button
            android:id="@+id/button_CodBarraDigitavel_ConfirmarDadosPagamentos"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="@color/cinza_escuro"
            android:text="Confirmar"
            android:textColor="@color/white"
            android:textSize="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>