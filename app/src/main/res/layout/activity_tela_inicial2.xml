<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="#FFFFFF"


    tools:context=".TelaInicial">


    <ImageView
        android:id="@+id/logo2"
        android:layout_width="144dp"
        android:layout_height="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/nome"
        android:layout_width="179dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Pay Coin"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo2"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/saldoDisp"
        android:layout_width="214dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="Saldo Disponível"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/textView_TelaInicial_Saldo"
        android:layout_width="214dp"
        android:layout_height="47dp"
        android:text="R$0.00 "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saldoDisp"
        app:layout_constraintVertical_bias="0.054" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="51dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_TelaInicial_Saldo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toEndOf="@+id/saldoDisp"
        app:layout_constraintTop_toTopOf="@+id/saldoDisp"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/olhar" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="413dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_TelaInicial_Saldo"
        app:layout_constraintVertical_bias="0.99">

        <Button
            android:id="@+id/button_Telainicial_Pagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/pagar2"
            android:text="Pagar"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_TelaInicial_Receber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/depositar1"
            android:text="Receber"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_TelaInicial_Historico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/dolarrec"
            android:text="Histórico"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_TelaInicial_Perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/userok2"
            android:text="Perfil"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/nav_Caixa_Navegacao"
        android:layout_width="120dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toTopOf="@+id/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_Botao_Navegacao"
        android:layout_width="120dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toTopOf="@+id/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082"
        app:menu="@menu/botoes_menu" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>