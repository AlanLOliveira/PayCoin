<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/cinza_laro"
    tools:context=".Historico">


    <ImageButton
        android:id="@+id/imageButton_Historico_TelaPrincipal"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_marginBottom="40dp"
        android:background="@color/white"
        android:backgroundTint="@color/cinza_laro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView

        android:id="@+id/nome1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay Coin"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_Historico_HistoricoTransacoes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_Historico_Logo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/selecaoDataFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione Data Final"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/calendarView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toStartOf="@+id/calendarView4"
        app:layout_constraintTop_toBottomOf="@+id/textView_Historico_HistoricoTransacoes"
        app:layout_constraintVertical_bias="1.0" />

    <CalendarView
        android:id="@+id/calendarView4"
        android:layout_width="161dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Historico_HistoricoTransacoes"
        app:layout_constraintVertical_bias="0.06" />

    <ImageView
        android:id="@+id/imageView_Historico_Logo"
        android:layout_width="wrap_content"
        android:layout_height="137dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView_Historico_HistoricoTransacoes"
        android:layout_width="216dp"
        android:layout_height="30dp"
        android:text="Histórico de Transações"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_Historico_Logo"
        app:layout_constraintVertical_bias="0.115" />

    <CalendarView
        android:id="@+id/calendarView2"
        android:layout_width="161dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Historico_HistoricoTransacoes"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/selecaoDataInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione Data Inicial"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/calendarView2"
        app:layout_constraintEnd_toEndOf="@+id/calendarView2"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Historico_HistoricoTransacoes"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="193dp"
        android:layout_height="254dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Historico_Buscar"
        app:layout_constraintVertical_bias="0.099"
        app:srcCompat="@drawable/trasacoes" />

    <Button
        android:id="@+id/button_Historico_Buscar"
        android:layout_width="93dp"
        android:layout_height="34dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/cinza_escuro"
        android:text="Buscar"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Historico_HistoricoTransacoes"
        app:layout_constraintVertical_bias="0.094" />


</androidx.constraintlayout.widget.ConstraintLayout>